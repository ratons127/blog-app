<%- include('../partials/header') %>
<section class="form-shell">
  <div class="form-hero">
    <p class="eyebrow">New story</p>
    <h1>Share your latest update</h1>
    <p>Write something helpful, add a cover image, and publish.</p>
  </div>

  <form id="post-form" class="form-card" enctype="multipart/form-data">
    <label>Title</label>
    <input type="text" name="title" placeholder="Give your post a clear title" required />

    <label>Content</label>
    <textarea name="content" rows="8" placeholder="Tell your story..." required></textarea>

    <label>Cover image (optional)</label>
    <input type="file" name="image" accept="image/*" />

    <button type="submit">Publish</button>
    <p id="post-message"></p>
  </form>
</section>
<script src="/js/post-form.js"></script>
<%- include('../partials/footer') %>
